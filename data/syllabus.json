    {
      "id": "2.4",
      "title": "Properties of Determinants",
      "subtopics": [
        {
          "id": "2.4.1",
          "title": "State and verify the properties of determinants"
        },
        {
          "id": "2.4.1.Property 1",
          "title": "The values of the determinants of any square matrix $A$ and its transpose are always the same."
        },
        {
          "id": "2.4.1.Property 2",
          "title": "The interchange of any two rows or columns of a square matrix $A$ changes the sign of its determinant without altering its numerical value."
        },
        {
          "id": "2.4.1.Property 3",
          "title": "If two rows or columns of a square matrix are identical, then its determinant is zero."
        },
        {
          "id": "2.4.1.Property 4",
          "title": "If all the elements of a row or column of a square matrix are zero, then its determinant is zero."
        },
        {
          "id": "2.4.1.Property 5",
          "title": "If every element in a row or column of a square matrix $A$ is multiplied by the same number $k$, then $|A|$ gets multiplied by $k$."
        },
        {
          "id": "2.4.1.Property 6",
          "title": "If every element of a row or column of a square matrix $A$ is expressed as the sum of two terms then $|A|$ can be expressed as the sum of determinants of two matrices..."
        },
        {
          "id": "2.4.1.Property 7",
          "title": "If the elements of one row or column of a square matrix $A$ are $k$ times the corresponding elements of its another row or column then $|A| = 0$."
        },
        {
          "id": "2.4.1.Property 8",
          "title": "If to each element of a row or column of a square matrix A is added, a constant multiple of the corresponding element of another row or column then the value of |A| is unaltered."
        },
        {
          "id": "2.4.2",
          "title": "Evaluate the determinant without expansion (i.e., using properties of determinants)"
        }
      ]
